<project name="Package-stage">
	<target name="Package">

		<!-- Copy source to NuGet Package -->
		<copy todir="${artifacts.dir}\NuGet\src">
			<fileset basedir="${root.dir}\${source.dir}">
				<include name="**/*.cs" />
				<include name="**/*.txt" />
				<include name="**/*.config" />
				<exclude name="**/bin/**" />
				<exclude name="**/obj/**" />
				<exclude name="**/packages/**" />
			</fileset>
		</copy>

		<!-- Copy NuSpec -->
		<copy file="${root.dir}\${nuspec.file}" tofile="${artifacts.dir}\NuGet\${nuspec.file}" />

		<!-- Compile NuSpec -->
		<exec basedir="${root.dir}\Build\Tools\NuGet" program="NuGet.exe" workingdir="${artifacts.dir}\NuGet">
			<arg value="pack" />
			<arg value="${artifacts.dir}\NuGet\${nuspec.file}" />
			<arg value="-Symbols" />
		</exec>

	</target>
</project>